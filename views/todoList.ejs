<%- include("header") -%>

<div class="box" id="heading">
    <h1><%= todoHeading %></h1>
  </div>

  <div class="box">
    <% for(index = 0; index < todoItems.length; index++) { %>
      <div class="item">
        <input type="checkbox">
        <p><%= todoItems[index] %></p>
      </div>
    <% } %>

    <form class="item" action="/" method="post">
      <input type="text" name="todoTask" placeholder="New Task" autocomplete="off">
      <button type="submit" name="submitTodoBtn" value=<%= todoHeading %>>+</button>
    </form>
  </div>

<%- include("footer") -%>